{
  "name": "dart-abstract-class-extractor",
  "displayName": "Dart Abstract Class Extractor",
  "description": "Automatically converts Dart concrete classes into an abstract interface and a corresponding implementation class, following clean architecture principles.",
  "version": "0.5.1",
  "publisher": "SandroAbashidze",
  "repository": {
    "type": "git",
    "url": "https://github.com/SandroAbashidze/dart-abstract-class-extractor"
  },
  "files": [
    "dist/**",
    "images/**",
    "ast_extractor.exe",
    "ast_extractor_windows.exe"
  ],
  "icon": "images/icon.png",
  "keywords": [
    "dart",
    "flutter",
    "abstract",
    "interface",
    "clean architecture",
    "code generation"
  ],
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dart"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dart-abstract-class-extractor.convertToAbstract",
        "title": "Dart: Convert to Abstract Class"
      }
    ],
    "configuration": {
      "title": "Dart Abstract Class Extractor Settings",
      "properties": {
        "dartAbstractClassExtractor.interfacePrefix": {
          "type": "string",
          "default": "I",
          "description": "Prefix for interface class names (e.g., 'I' generates 'IUserService')"
        },
        "dartAbstractClassExtractor.implementationSuffix": {
          "type": "string",
          "default": "Impl",
          "description": "Suffix for implementation class names (e.g., 'Impl' generates 'UserServiceImpl')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.11",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
